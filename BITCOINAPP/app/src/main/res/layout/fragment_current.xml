<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurrentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ErrorMesage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EB0C0A0A"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="BitFlyer"
                android:textColor="#EADFDF"
                android:textSize="34sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                app:srcCompat="@drawable/bitcoin2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="現在のbitFlyer\n平均取引価格"
                android:textColor="#EADFDF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BitCoinCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="￥300000"
                android:textColor="#F8EFEE"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="serif"
                android:gravity="right"
                android:text="/BTC       "
                android:textColor="#F8EFEE"
                android:textSize="25sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="2" />

                <Button
                    android:id="@+id/Record"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="直近の取引履歴"
                    android:textSize="16sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="2" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>